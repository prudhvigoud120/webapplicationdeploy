pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'prudhvi120/helloworld' // Replace with your Docker image and tag
        EC2_INSTANCE = '52.90.159.51' // Replace with your EC2 instance IP or DNS
        SSH_KEY = credentials('ssh-key') // Replace with your Jenkins SSH credentials ID
    }

    stages {
        stage('Deploy to EC2') {
            steps {
                script {
                    // SSH into the EC2 instance and deploy the Docker container
                    sh """
                    ssh -i ${SSH_KEY} -o StrictHostKeyChecking=no ec2-user@${EC2_INSTANCE} << EOF
                    docker pull \${DOCKER_IMAGE}
                    docker run -d --name contain1 -p 3000:3000 \${DOCKER_IMAGE}
                    >> EOF
                 """
                }
            }
        }
    }
}
